<div class="showcase-container">

  <div class="showcase-wrapper">

    <p class="showcase-title"><span>CHOOSE YOUR COLOR AND QUANTITY</span></p>

    <div class="showcase-item-container">

      <% Array(0..7).each_with_index do |item, index| %>
          <div id="showcase-item-<%= index %>" class="showcase-item <%= 'border-left-for-4' if index%4==0 %> <%= 'border-left-for-2' if index%2==0 %>">
            <div class="showcase-item-title">Bondi Blue</div>
            <div class="showcase-item-image">
              <%= image_tag 'theme/bondi-blue.png' %>
              <div class="showcase-item-qt">10</div>
            </div>
            <div class="showcase-item-select">
              <div class="showcase-item-select-wrap">
                <div class="minus">-</div>
                <div class="qt">10</div>
                <div class="plus">+</div>
              </div>
            </div>
          </div>
      <% end %>

    </div>


    <div class="shipping-wrapper">
      <div class="shipping-options">
        <h3 class="section-title">Shipping</h3>
        <div class="shipping-choices-container">
          <p class="text-center">In stock Pebbles ship the next business day.</p>

          <div class="shipping-choice">
            <input name="shippingChoice" type="radio" value="1">
            USPS (3-5 business days): FREE
          </div>

          <div class="shipping-choice">
            <input name="shippingChoice" type="radio" value="1">
            FEDEX (3 BUSINESS DAYS): $12
          </div>

          <div class="shipping-choice">
            <input name="shippingChoice" type="radio" value="1">
            FEDEX (NEXT BUSINESS DAY): $25 (?)
          </div>
        </div>
        <h3 class="section-title lets-go">LET'S GET YOUR DETAILS</h3>
      </div>


      <div class="split-content-panel">

        <div class="shipping-address-wrapper">

            <div class="row">
              <div class="left-content-unit col-sm-6">
                <form action="" class="shipping-address-form">
                  <div class="section-title">SHIPPING ADDRESS</div>
                  <label>FULL NAME</label>
                  <input type="text" placeholder="Your Full Name"/>

                  <label>E-Mail</label>
                  <input type="text" placeholder="Your Email Address"/>

                  <label>SHIPPING ADDRESS</label>
                  <input type="text" class="address-line-one" placeholder="ADDRESS LINE ONE"/>
                  <input type="text" class="address-line-two" placeholder="ADDRESS LINE TWO (OPTIONAL)"/>
                  <div class="row city-state">
                    <div class="col-sm-6 city">
                      <input type="text" placeholder="City"/>
                    </div>
                    <div class="col-sm-6 state">
                      <select name="" id="">
                        <option value="">State</option>
                        <option value="">More State</option>
                        <option value="">More State</option>
                      </select>
                    </div>
                  </div>
                  <div class="row zip-country">
                    <div class="col-sm-6 zip">
                      <input type="text" placeholder="zip"/>
                    </div>
                    <div class="col-sm-6 country">
                      <input type="text" placeholder="Country" value="Country" readonly/>
                    </div>
                  </div>
                </form>



                <div class="row">
                  <p class="same-billing-address">
                    <span class="custom-check">
                        <input checked="checked" id="same-address" name="same-address" type="checkbox" value="yes">
                        <label for="same-address"></label>
                    </span>
                    <span class="check-box-label">Billing Address and Shipping Address Are the same</span>
                  </p>
                </div>



                <form action="" class="shipping-address-form">
                  <div class="section-title">BILLING ADDRESS</div>
                  <label>FULL NAME</label>
                  <input type="text" placeholder="Your Full Name"/>

                  <label>E-Mail</label>
                  <input type="text" placeholder="Your Email Address"/>

                  <label>SHIPPING ADDRESS</label>
                  <input type="text" class="address-line-one" placeholder="ADDRESS LINE ONE"/>
                  <input type="text" class="address-line-two" placeholder="ADDRESS LINE TWO (OPTIONAL)"/>
                  <div class="row city-state">
                    <div class="col-sm-6 city">
                      <input type="text" placeholder="City"/>
                    </div>
                    <div class="col-sm-6 state">
                      <select name="" id="">
                        <option value="">State</option>
                        <option value="">More State</option>
                        <option value="">More State</option>
                      </select>
                    </div>
                  </div>
                  <div class="row zip-country">
                    <div class="col-sm-6 zip">
                      <input type="text" placeholder="zip"/>
                    </div>
                    <div class="col-sm-6 country">
                      <input type="text" placeholder="Country" value="Country" readonly/>
                    </div>
                  </div>
                </form>
              </div>

              <div class="right-content-unit col-sm-6">
                <form action="" class="payment-info-form">
                  <div class="card-input">

                    <div>
                      <%= image_tag 'icon-green-lock.png' %>
                      <label for="">PAYMENT INFO</label>
                    </div>

                  </div>
                </form>
              </div>
            </div>
        </div>
      </div>
    </div>

  </div>

</div>
